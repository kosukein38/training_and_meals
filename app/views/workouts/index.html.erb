<% assign_meta_tags title: (t '.title') %>
<div class="w-full">
  <div class="mx-auto">
    <div class="flex items-center">
      <h1 class="text-xl font-bold m-4"><%= t '.title' %></h1>
    </div>
    <div class="flex flex-wrap w-full">
      <% if @workouts.present? %>
        <%= render @workouts %>
      <% else %>
        <p><%= t('.no_result') %></p>
      <% end %>
    </div>
    <div class="flex justify-start md:justify-center btn-group w-screen m-8"><%= paginate @workouts %></div>
  </div>
</div>
