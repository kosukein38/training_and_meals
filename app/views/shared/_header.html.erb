<header class="navbar bg-primary-focus text-primary-content flex justify-between">
  <div class="flex-1">
    <%= link_to root_path, class: "btn btn-ghost normal-case text-xl text-base-200 italic" do%>
    <%= image_tag('header-logo.png', width: 150) %>
    <% end %>
  </div>
  <div class="flex-none gap-2">
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar" id="header-avatar">
        <div class="w-10 rounded-full">
          <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar.variant(:thumb) %>
          <% else %>
          <%= image_tag('user_sample.png', size: "400x400") %>
          <% end %>
        </div>
      </label>
      <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52 text-base-content">
        <li><%= link_to (t 'defaults.profile'), profile_path %></li>
        <li><%= link_to (t 'defaults.logout'), logout_path, data: { turbo_method: :delete } %></li>
      </ul>
    </div>
  </div>
</header>
