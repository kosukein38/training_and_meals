<% assign_meta_tags title: (t '.title') %>
<div class="p-4 flex flex-col w-full items-center">
  <h1 class="text-2xl font-bold md:text-center py-8"><%= t '.title' %></h1>
    <%= form_with url: password_resets_path, local: true do |f| %>
    <div class="form-control flex flex-col w-full items-center">
      <%= f.label :email, t(User.human_attribute_name(:email)), class: "text-xl pt-4 font-bold" %>
      <%= f.email_field :email, class: "input input-bordered" %>
      <p>リセットページへのリンクをメール送信します</p>
      <%= f.submit (t '.submit'), class: "btn btn-primary btn-wide my-8"%>
    </div>
    <% end %>
</div>
