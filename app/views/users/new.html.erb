<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <div class="text-center my-4">
      <h1 class="text-5xl font-bold"><%= t '.title' %></h1>
    </div>
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
          <div class="form-control">
            <%= f.label :name %>
            <%= f.text_field :name, class: "input input-bordered" %>
          </div>
          <div class="form-control">
            <%= f.label :email %>
            <%= f.email_field :email, class: "input input-bordered" %>
          </div>
          <div class="form-control">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control input input-bordered" %>
          </div>
          <div class="form-control">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-control input input-bordered" %>
          </div>
          <div class="form-control mt-6">
            <%= f.submit (t 'defaults.register'), class: "btn btn-primary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

